@{
    ViewData["Title"] = "Add to mailing list";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model Seafood.Models.Mail

<div class="panel panel-success">
    <div class="panel-heading">Enter your email to be in our mailing list</div>
    <div class="panel-body">
        @using (Html.BeginForm("Mail", "Home"))
            {
            <div class="form-group">
            <label>Your Email:</label>
             @Html.TextBoxFor(model => model.Email, new { @class = "form-control" })
             </div>
             <div class="form-group">
                <label>What would you like to hear about:</label>
                @Html.TextBoxFor(model => model.Preference, new { @class = "form-control" })
            </div>
                <input type="submit" class="btn btn-success" value="Subscribe">
        }
    </div>
</div>